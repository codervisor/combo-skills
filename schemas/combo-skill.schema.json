{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/codervisor/combo-skills/schemas/combo-skill.schema.json",
  "title": "Combo Skill Definition",
  "description": "Schema for defining combo skills that compose multiple existing skills",
  "type": "object",
  "required": ["name", "description", "skills", "intent"],
  "definitions": {
    "modifierType": {
      "type": "string",
      "enum": ["retry", "cache", "timeout", "auth", "rate-limit", "log", "fallback", "batch", "parallel", "dry-run"]
    },
    "prefixModifier": {
      "type": "string",
      "description": "Prefix-style modifier, e.g., 'retry:3', 'cache:5m', 'timeout:30s'",
      "pattern": "^(retry|cache|timeout|auth|rate-limit|log|fallback|batch|parallel|dry-run)(:[^:]+)?$"
    },
    "structuredModifier": {
      "type": "object",
      "description": "Structured modifier with detailed configuration",
      "properties": {
        "retry": {
          "type": "object",
          "properties": {
            "attempts": { "type": "integer", "minimum": 1, "maximum": 10, "default": 3 },
            "backoff": { "type": "string", "enum": ["linear", "exponential", "fixed"], "default": "exponential" },
            "delay": { "type": "string", "description": "Initial delay, e.g., '1s', '500ms'", "pattern": "^\\d+(ms|s|m)$" }
          }
        },
        "cache": {
          "type": "object",
          "properties": {
            "ttl": { "type": "string", "description": "Time-to-live, e.g., '5m', '1h'", "pattern": "^\\d+(s|m|h|d)$" },
            "key": { "type": "string", "description": "Cache key template with ${input.*} placeholders" }
          }
        },
        "timeout": {
          "type": "object",
          "properties": {
            "duration": { "type": "string", "description": "Timeout duration, e.g., '30s', '5m'", "pattern": "^\\d+(ms|s|m)$" }
          }
        },
        "auth": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["bearer", "basic", "api-key", "oauth2"] },
            "source": { "type": "string", "description": "Environment variable or secret name" }
          }
        },
        "rate-limit": {
          "type": "object",
          "properties": {
            "requests": { "type": "integer", "minimum": 1, "description": "Maximum requests per window" },
            "window": { "type": "string", "description": "Time window, e.g., '1m', '1h'", "pattern": "^\\d+(s|m|h)$" }
          }
        },
        "log": {
          "type": "object",
          "properties": {
            "level": { "type": "string", "enum": ["debug", "info", "warn", "error"], "default": "info" },
            "include": { "type": "array", "items": { "type": "string", "enum": ["input", "output", "timing", "errors"] } }
          }
        },
        "fallback": {
          "type": "object",
          "properties": {
            "skill": { "type": "string", "description": "Alternative skill to use on failure" },
            "value": { "description": "Static fallback value on failure" }
          }
        },
        "batch": {
          "type": "object",
          "properties": {
            "size": { "type": "integer", "minimum": 1, "description": "Batch size for grouped invocations" },
            "delay": { "type": "string", "description": "Delay between batches", "pattern": "^\\d+(ms|s)$" }
          }
        },
        "parallel": {
          "type": "object",
          "properties": {
            "concurrency": { "type": "integer", "minimum": 1, "maximum": 100, "default": 5, "description": "Maximum concurrent executions" }
          }
        },
        "dry-run": {
          "type": "object",
          "properties": {
            "log": { "type": "boolean", "default": true, "description": "Log simulated actions" }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the combo skill",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 2,
      "maxLength": 64
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of what the combo skill does",
      "minLength": 10,
      "maxLength": 1000
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the combo skill definition",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "0.1.0"
    },
    "primitives": {
      "type": "array",
      "description": "Primitive capability categories used by this combo skill",
      "items": {
        "type": "string",
        "enum": ["read", "write", "search", "execute", "transform"]
      },
      "uniqueItems": true
    },
    "modifiers": {
      "type": "array",
      "description": "Cross-cutting behavior modifiers applied to this skill. Supports prefix syntax (e.g., 'retry:3') or structured objects.",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/prefixModifier" },
          { "$ref": "#/definitions/structuredModifier" }
        ]
      }
    },
    "skills": {
      "type": "array",
      "description": "List of skills that compose this combo skill",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the skill as it appears in the registry"
          },
          "from": {
            "type": "string",
            "description": "Registry or source of the skill",
            "default": "skills.sh"
          },
          "version": {
            "type": "string",
            "description": "Optional version constraint for the skill"
          },
          "alias": {
            "type": "string",
            "description": "Local alias for referencing this skill in constraints"
          },
          "primitives": {
            "type": "array",
            "description": "Primitive capability categories for this skill",
            "items": {
              "type": "string",
              "enum": ["read", "write", "search", "execute", "transform"]
            },
            "uniqueItems": true
          },
          "modifiers": {
            "type": "array",
            "description": "Modifiers applied to this specific skill",
            "items": {
              "oneOf": [
                { "$ref": "#/definitions/prefixModifier" },
                { "$ref": "#/definitions/structuredModifier" }
              ]
            }
          }
        }
      }
    },
    "intent": {
      "type": "string",
      "description": "Natural language description of the composition intent",
      "minLength": 20
    },
    "constraints": {
      "type": "object",
      "description": "Explicit constraints on how skills are composed",
      "properties": {
        "ordering": {
          "type": "array",
          "description": "Explicit ordering relationships between skills",
          "items": {
            "type": "string",
            "description": "Ordering expression, e.g., 'skill-a -> skill-b'"
          }
        },
        "assumptions": {
          "type": "array",
          "description": "Domain assumptions the combo skill relies on",
          "items": {
            "type": "string"
          }
        },
        "data_flow": {
          "type": "array",
          "description": "Explicit data flow between skills",
          "items": {
            "type": "object",
            "properties": {
              "from": {
                "type": "string",
                "description": "Source skill name or alias"
              },
              "to": {
                "type": "string",
                "description": "Target skill name or alias"
              },
              "mapping": {
                "type": "object",
                "description": "Output-to-input field mapping",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the combo skill",
      "properties": {
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "string"
        }
      }
    }
  }
}
